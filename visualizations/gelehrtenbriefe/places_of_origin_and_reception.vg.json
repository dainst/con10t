{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "signals": [
    {
      "name": "selected", "value": null,
      "on": [
        {"events": "symbol:mouseover", "update": "datum"},
        {"events": "symbol:mouseout", "update": "null"}
      ]
    },
    {
      "name": "width",
      "on": [
        {
          "events": {
            "source": "window",
            "type": "resize"
          },
          "update": "containerSize()[0]"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "places",
      "url": "con10t/visualizations/gelehrtenbriefe/data/places_of_origin_and_reception.csv",
      "format": {
        "type": "csv"
      },
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["origin_lng", "origin_lat"],
          "as": ["origin_x", "origin_y"]
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["reception_lng", "reception_lat"],
          "as": ["reception_x", "reception_y"]
        },
        {
          "type": "formula",
          "expr": "log(datum.letter_count)",
          "as": "squashed_letter_count"
        }
      ]
    },
    {
      "name": "selected",
      "source": "places",
      "transform": [
        {
          "type": "filter",
          "expr": "datum === selected"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "places"
      },
      "encode": {
        "update": {
          "stroke": {"value": "#000"},
          "strokeOpacity": {"value": 0.2},
          "width": 1,
          "height": 1,
          "strokeWidth": { "field" : "squashed_letter_count"}
        }
      },
      "transform":
      [
         {
          "type": "linkpath",
          "sourceX": "datum.origin_x",
          "targetX": "datum.reception_x",
          "sourceY": "datum.origin_y",
          "targetY": "datum.reception_y",
          "shape": "curve"
        }
      ]
    }
  ]
}