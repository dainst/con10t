{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "signals": [
    {
      "name": "selected", "value": null,
      "on": [
        {"events": "symbol:mouseover", "update": "datum"},
        {"events": "symbol:mouseout", "update": "null"}
      ]
    },
    {
      "name": "width",
      "on": [
        {
          "events": {
            "source": "window",
            "type": "resize"
          },
          "update": "containerSize()[0]"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "places",
      "url": "con10t/visualizations/gelehrtenbriefe/places_of_origin/data.csv",
      "format": {
        "type": "csv"
      },
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["lng", "lat"]
        }
      ]
    },
    {
      "name": "selected",
      "source": "places",
      "transform": [
        {
          "type": "filter",
          "expr": "datum === selected"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "name": "city",
      "from": { "data": "places" },
      "encode": {
        "enter": {
        "fill": {"value": "#F00"},
        "fillOpacity": {"value": 0.5 },
        "stroke": {"value": "#000"}
      },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "size": {"field": "letter_count", "mult": 1.5}
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "from": {"data": "selected"},
      "encode": {
        "enter": {
          "fill": {"value": "#000"},
          "fontSize": {"value": 12},
          "align": {"value": "right"},
          "baseline": {"value": "bottom"},
          "text": {"field": "letter_count"}
        },
        "update": {
          "x": {"signal": "width"},
          "y": {"offset": 20}
        }
      }
    }
  ]
}